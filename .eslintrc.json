{
  "extends": [
    "eslint:recommended",
    "esnext",
    "plugin:import/errors",
    "plugin:import/warnings"
  ],
  "parser": "babel-eslint",

  "env": {
    "es6": true,
    "node": true,
    "commonjs": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    // "import/no-unresolved": [2, { "commonjs": true, "amd": true }],
    // "import/named": 2,
    // "import/namespace": 2,
    // "import/default": 2,
    // "import/export": 2,
    "eslint-disable-next-line": true
  }
}
